<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/public/css/style.css">
    <title>Project 2</title>
</head>
<body>
    <h1>Here are your habits!</h1>
    <!-- signout -->
    <a href="/users/signin">Logout and have a great day!</a>

<!-- habits -->
    <!-- new -->
    <a href="/habits/new">Create a new habit!</a>

    <!-- exsisting -->
    <ul>
        <% habits.forEach(function(habit) { %>
            <li>
                Habit: <%= habit.habit %>
                - 
                Month: <%= habit.month %> 
                - 
                Day Of Week: <%= habit.dayName %> 
                - 
                Day: <%= habit.dayNo %> 
                - 
                Note: <%= habit.note %> 
            </li>

    <!-- WORKING: update habit -->
            <li>
                <form action="/habits/index<%= habit._id %>?_method=PUT" method="POST">
                    <label>Habit:
                        <input type="text" name="habit">
                    </label>
                    <label>Month:
                        <select name="month">
                            <option value="January">January</option>
                            <option value="Febuuary">Febuuary</option>
                            <option value="March">March</option>
                            <option value="April">April</option>
                            <option value="May">May</option>
                            <option value="June">June</option>
                            <option value="July">July</option>
                            <option value="Augest">Augest</option>
                            <option value="September">September</option>
                            <option value="October">October</option>
                            <option value="November">November</option>
                            <option value="December">December</option>
                        </select>
                    </label>
                    <label>Day Of Week:
                        <select name="dayName">
                            <option value="Monday">Monday</option>
                            <option value="Tuesday">Tuesday</option>
                            <option value="Wednesday">Wednesday</option>
                            <option value="Thursday">Thursday</option>
                            <option value="Friday">Friday</option>
                            <option value="Saturday">Saturday</option>
                            <option value="Sunday">Sunday</option>
                        </select>
                    </label>
                    <label>Day:
                        <select name="dayNo">
                            <option value="01">01</option>
                            <option value="02">02</option>
                            <option value="03">03</option>
                            <option value="04">04</option>
                            <option value="05">05</option>
                            <option value="06">06</option>
                            <option value="07">07</option>
                            <option value="08">08</option>
                            <option value="09">09</option>
                            <option value="10">10</option>
                            <option value="11">11</option>
                            <option value="12">12</option>
                            <option value="13">13</option>
                            <option value="14">14</option>
                            <option value="15">15</option>
                            <option value="16">16</option>
                            <option value="17">17</option>
                            <option value="18">18</option>
                            <option value="19">19</option>
                            <option value="20">20</option>
                            <option value="21">21</option>
                            <option value="22">22</option>
                            <option value="23">23</option>
                            <option value="24">24</option>
                            <option value="25">25</option>
                            <option value="26">26</option>
                            <option value="27">27</option>
                            <option value="28">28</option>
                            <option value="29">29</option>
                            <option value="30">30</option>
                            <option value="31">31</option>
                        </select>
                    </label>
                    <label>Note:
                        <input type="text" name="note">
                    </label>
                    <button type="submit">Fix Habit</button>
                </form>
            </li>
            
    <!-- TODO: delete habit -->
            <li>
                <!-- <form action="/habits/index<%= habit._id %>?_method=DELETE" method="POST">
                    <button type="submit">Delete Habit</button>
                </form> -->
            </li>
        <% });%>
    </ul>

</body>
</html>